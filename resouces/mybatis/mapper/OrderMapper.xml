            </if>
            <if test="enti.num != null">
                num=#{enti.num},
            </if>
            <if test="enti.seat != null">
                seat=#{enti.seat},
            </if>
            <if test="enti.statue != null">
                statue=#{enti.statue},
            </if>
        </set>
        <if test="assist.require!=null"><include refid="updateAssist" /></if>
    </update>

</mapper>